<Application x:Class="SaleHouse.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SaleHouse"
             StartupUri="Windows/HouseListing.xaml">
    <Application.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Tw Cen MT"/>
            <Setter Property="Foreground" Value="#FF37474F"/>
        </Style>

        <Style TargetType="Button">
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="3"/>
                </Style>
            </Style.Resources>
            <Setter Property="Background" Value="#FFFF9C1A"/>
            <Setter Property="FontFamily" Value="Tw Cen MT"/>
        </Style>
    </Application.Resources>
</Application>
